---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	body: string;
	path: string;
}

const { path, title, body } = Astro.props;
---

<li class="group">
	<div class="card w-64 bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-all duration-500 ease-in-out hover:bg-gray-700 hover:scale-105 cursor-pointer">
		<div class="flex justify-center bg-gray-900 p-2">
			<Image 
				src={path}
				alt={title}
				width={200}
				height={150}
				class="w-[200px] h-[150px] object-contain transition-all duration-500 ease-in-out group-hover:grayscale group-hover:blur-sm"
			/>
		</div>
		<div class="p-4 relative">
			<h2 class="text-lg font-semibold text-white mb-2 transition-all duration-500 ease-in-out group-hover:text-blue-400">
				{title}
			</h2>
			<p class="text-sm text-gray-400 transition-all duration-500 ease-in-out group-hover:text-gray-300">
				{body}
			</p>
			<div class="absolute top-0 right-4 transform -translate-y-1/2 transition-all duration-500 ease-in-out group-hover:translate-x-2">
			</div>
		</div>
	</div>
</li>