---
import Layout from "../layouts/Layout.astro";
import Card from "@components/Card.astro";
import FlipWords from "@components/FlipWords";
import WhyChooseUs from "src/sections/WhyChooseUs";

const words = ["faster", "smarter", "stronger", "sleeker"];
---

<Layout title="Landing page (change this)">
	<script
		type="module"
		src="https://unpkg.com/@splinetool/viewer@1.8.1/build/spline-viewer.js"
	></script>
	<div class="relative w-full h-screen overflow-hidden">
		<div class="absolute inset-0 z-10">
			<spline-viewer
				url="https://prod.spline.design/E5SZNJfYrqlK6tyt/scene.splinecode"
			></spline-viewer>
		</div>

		<div
			class="absolute inset-0 flex items-center justify-center lg:justify-start p-8 lg:p-16"
			style="user-select: none;"
		>
			<div class="max-w-2xl">
				<div
					class="h-[20rem] flex justify-center items-center px-4 bg-gray-900 rounded-2xl"
				>
					<div
						class="text-7xl mx-auto font-bold text-neutral-100 leading-tight tracking-tight"
					>
						Build
						<FlipWords words={words} client:load />
						<br />
						automation with <span class="text-indigo-400"
							>Armify</span
						> products
					</div>
				</div>
				<p
					class="mt-3 text-lg sm:text-xl max-w-md mx-auto lg:mx-0 text-center lg:text-left text-white"
				>
					Revolutionizing industries with cutting-edge robotic arms
					and advanced machinery.
				</p>
				<div class="mt-8 flex justify-center lg:justify-start">
					<a
						href="#products"
						class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 transition duration-150 ease-in-out z-20"
					>
						Explore Our Products
					</a>
				</div>
			</div>
		</div>
	</div>
	<main
		class="px-16 sm:px-28 md:px-28 lg:px-28 xl:px-56 py-8 sm:py-12 md:py-16"
	>
		<WhyChooseUs client:load />
		<h3
			class="text-4xl font-bold mb-6 text-center animate-fade-in-up"
			id="products"
		>
			Discover Our Superior Robotic Arms
		</h3>
		<p class="mb-12 text-center animate-fade-in-up delay-100">
			Dive into our range of advanced robotic arms, engineered for
			revolutionizing industrial automation.<br />
			<strong class="text-pink-500">Experience the future:</strong> Explore
			each model to elevate your operations.
		</p>

		<ul
			role="list"
			class="flex justify-between items-stretch w-full flex-wrap gap-5"
		>
			<Card
				path="/robotArms/roboarm1.webp"
				title="ABB IRB 6700"
				body="Learn how the ABB IRB 6700 excels in heavy-duty applications."
			/>
			<Card
				path="/robotArms/roboarm2.webp"
				title="Fanuc M-20iA"
				body="Explore the capabilities of the Fanuc M-20iA for high-speed operations."
			/>
			<Card
				path="/robotArms/roboarm3.webp"
				title="Kuka KR 6"
				body="Discover the power of the Kuka KR 6 for precise automation tasks."
			/>
		</ul>
	</main>
</Layout>
<style>
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(
			rgba(var(--accent-dark), 66%),
			rgba(var(--accent-dark), 33%)
		);
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
</style>
